@model PagedList<VendorDomainObj>

@{
    ViewData["Title"] = "Vendor List";
}

<div class="row-m">
    <div class="col-md-12 table-responsive-md">
        <h2>Vendor List</h2>
        <p>
            <a href="/Vendor/Create" class="btn-sm btn-primary" role="button">Create New</a>
        </p>        
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Account Number</th>
                    <th>Name</th>
                    <th>Credit Rating</th>
                    <th>Preferred Vendor?</th>
                    <th>Active?</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreditRating)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PreferredVendor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            <a href="/Vendor/Edit/@item.BusinessEntityID" class="btn-sm btn-outline-primary" role="button">Edit</a> &nbsp;                            
                            <a href="/Vendor/Details/@item.BusinessEntityID" class="btn-sm btn-outline-info" role="button">Details</a> &nbsp;
                            <a href="/Vendor/Delete/@item.BusinessEntityID" class="btn-sm btn-outline-danger" role="button">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row-m">
    <div class="row-cols-md-6">
        <cs-pager cs-paging-pagesize="@Model.PageSize"
                  cs-paging-pagenumber="@Model.CurrentPage"
                  cs-paging-totalitems="@Model.TotalCount"
                  cs-pagenumber-param="pageNumber"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link"
                  cs-previous-page-html="<a class='page-link' href='#' title='Previous page'><i class='glyphicon glyphicon-backward'></i></a>"
                  cs-next-page-html="<a class='page-link' href='#' title='Next page'><i class='glyphicon glyphicon-forward'></i></a>"
                  asp-controller="Vendor"
                  asp-action="List"
                  asp-route-pagesize="@Model.PageSize"></cs-pager>
    </div>
</div>

