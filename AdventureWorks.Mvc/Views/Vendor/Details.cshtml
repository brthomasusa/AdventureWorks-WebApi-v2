@model VendorDomainObj

@{
    ViewData["Title"] = "Vendor Details";
}

<div class="row-m bg-light">
    <h4>Vendor Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>
            @Html.DisplayFor(model => model.BusinessEntityID)
        </dd>
        <dt>Account Number</dt>
        <dd>
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Credit Rating</dt>
        <dd>            
            @Html.DisplayFor(model => model.CreditRating)
        </dd>
        <dt>
            Preferred Vendor?
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PreferredVendor)
        </dd>
        <dt>
            Active?
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt>
            Purchasing Web Service URL
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PurchasingWebServiceURL)
        </dd>        
    </dl>
</div>
<div>    
    <a href="/Vendor/List" class="btn-sm btn-primary" role="button">Back to List</a> &nbsp;
    <a href="/Vendor/Edit/@Model.BusinessEntityID" class="btn-sm btn-primary" role="button">Edit</a> &nbsp;
    <a href="#" class="btn-sm btn-primary" role="button">Contacts</a> &nbsp;
    <a href="#" class="btn-sm btn-primary" role="button">Addresses</a>        
</div>
